<configuration>
  <connectionStrings>
    <add name="IkeaDocumentScanningEntities" connectionString="metadata=res://*/DocumentScanning.BusinessObjects.IkeaDocuScanEntityDataModel.csdl|res://*/DocumentScanning.BusinessObjects.IkeaDocuScanEntityDataModel.ssdl|res://*/DocumentScanning.BusinessObjects.IkeaDocuScanEntityDataModel.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=(local);initial catalog=IkeaDocumentScanningCH;integrated security=True;multipleactiveresultsets=True;App=EntityFramework&quot;" providerName="System.Data.EntityClient" />
