    <!-- t2b ag <add key="CheckinDirectory" value="C:\checkin" />-->
    <add key="CheckinDirectory" value="C:\checkin" />

    <!-- Smtp server. -->
    <add key="SmtpServer" value="smtp-gw.ikea.com" />
    <!-- Default reply-to address where sender cannot be determined. -->
    <add key="DefaultMailAddress" value="t199@ingka.ikea.com" />
    <!-- Link template for mail with links to documents -->
    <add key="DocumentLinkTemplate" value="&lt;a href=&quot;http://localhost:8080/web/StreamDocument.aspx?barcode={0}&quot; target=&quot;_blank&quot;>{0}&lt;/a>&lt;br/>" />
    <!-- t2b ag August 24 2020 - Default email address for the action reminder. -->
    <add key="ActionReminder.DistributionList" value="ikea5.sfsf@ikea.com" />

    <!-- AD specific settings -->
    <!-- Domain of all users. -->
    <add key="DomainName" value="ikea.com" />
    <!-- LDAP root path for retrieving the e-mail address of the logged in user. -->
    <add key="UserEmail.LDAPRoot" value="LDAP://DC=ikea,DC=com" />
    <!-- LDAP filter for retrieving the e-mail address of the logged in user. -->
    <add key="UserEmail.LDAPFilter" value="(sAMAccountName={0})" />
    <!-- LDAP root path for email reminder groups. -->
    <add key="EmailGroups.LDAPRoot" value="LDAP://OU=Ikea,OU=Collab,DC=ikea,DC=com" />
    <!-- LDAP filter for email reminder groups. -->
    <add key="EmailGroups.LDAPFilter" value="(name=*Reminder*)" />
    <!-- LDAP filter for user groups-->
    <add key="ReaderGroups.LDAPRoot" />
    <!-- add key ="ReaderGroups.LDAPFilter"/ -->

    <!-- USERS and GROUPS; all names without domain -->
    <!-- Name of security group with read access for all documents. -->
    <add key="ADGroup.Builtin.Reader" value="IKEA\UG-DocScanningReaders-CG@WAL-FIN-CH-GEL" />
    <!-- Name of security group with write access for checkin, search and edit properties. -->
    <add key="ADGroup.Builtin.Publisher" value="IKEA\UG-DocScanningPublishers-CG@WAL-FIN-CH-GEL" />
    <!-- Name of security group with write access for checkin, search and edit properties. -->
    <add key="ADGroup.Builtin.SuperUser" value="IKEA\UG-DocScanningSuperUsers-CG@WAL-FIN-CH-GEL" />

    <!-- ERROR HANDLING -->
    <!-- For application errors: should the plain exception be displayed? Set to "False"
		     in live configuration. -->
    <add key="ErrorHandler.DisplayException" value="True" />
    <!-- Administrator who should receive mails on application errors. Delete this
		     key-value pair, if no mail should be sent. -->
    <!--<add key="ErrorHandler.MailRecipient" value="Iikeasuperuser@VIRTUALCORP.ch"/>-->

    <!-- various settings -->
    <!-- The size of the type list dropdown if large and if small-->
    <add key="TypeListSmallSize" value="152" />
    <add key="TypeListLargeSize" value="500" />
    <add key="EventLog.Source" value="Ikea Document Scanning Webapp" />
    <add key="EventLog.Logname" value="Application" />

    <!-- T2B AG, A.Willimann, August 2020 - control problematic areas -->
    <add key="T2B.EnableSmtp" value="True" />
    <add key="T2B.EnablePerfCounters" value="True" />
    <add key="T2B.EnableLog" value="True" />
    <add key="T2B.EnableWIA" value="True" />
    <add key="T2B.DefaultUser" value="ikea\mareg20" />

