@page "/documents/search"
@using IkeaDocuScan.Shared.DTOs.Documents
@using IkeaDocuScan.Shared.DTOs.DocumentTypes
@using IkeaDocuScan.Shared.DTOs.CounterParties
@using IkeaDocuScan.Shared.DTOs.Currencies
@using IkeaDocuScan_Web.Client.Models

<PageTitle>Search Documents</PageTitle>

<div class="container-fluid">
    <h3 class="mb-4">Search Documents</h3>

    @* Filter Panel *@
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Filter Criteria
            </h5>
        </div>
        <div class="card-body">
            @if (isLoadingReferenceData)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading reference data...</p>
                </div>
            }
            else
            {
                @* General Filters Section *@
                <div class="filter-section mb-4">
                    <h6 class="filter-section-title">
                        <i class="bi bi-file-earmark-text"></i> General Filters
                    </h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Search String (PDF Content)</label>
                            <input type="text" class="form-control" @bind="searchRequest.SearchString"
                                   placeholder="Search within document content" maxlength="255" />
                            <small class="text-muted">Full-text search in PDF files</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Barcode(s)</label>
                            <input type="text" class="form-control" @bind="searchRequest.Barcodes"
                                   placeholder="Enter comma-separated barcodes" maxlength="256" />
                            <small class="text-muted">Example: 12345,67890,11111</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Document Types</label>
                            <select class="form-select" size="5" multiple @onchange="OnDocumentTypesChanged">
                                @foreach (var dt in documentTypes)
                                {
                                    <option value="@dt.DtId" selected="@searchRequest.DocumentTypeIds.Contains(dt.DtId)">@dt.DtName</option>
                                }
                            </select>
                            <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Document Name</label>
                            <select class="form-select" @bind="searchRequest.DocumentNameId">
                                <option value="">-- All Document Names --</option>
                                @foreach (var dn in GetFilteredDocumentNames())
                                {
                                    <option value="@dn.Id">@dn.Name</option>
                                }
                            </select>
                            <small class="text-muted">@GetDocumentNameFilterHint()</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Document Number</label>
                            <input type="text" class="form-control" @bind="searchRequest.DocumentNumber"
                                   placeholder="Search document number" maxlength="255" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Version No.</label>
                            <input type="text" class="form-control" @bind="searchRequest.VersionNo"
                                   placeholder="Search version number" maxlength="255" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Associated to PUA/Agreement No.</label>
                            <input type="text" class="form-control" @bind="searchRequest.AssociatedToPua"
                                   placeholder="Search PUA/Agreement number" maxlength="255" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Associated to Appendix No.</label>
                            <input type="text" class="form-control" @bind="searchRequest.AssociatedToAppendix"
                                   placeholder="Search appendix number" maxlength="255" />
                        </div>
                    </div>
                </div>

                @* Counterparty Filters Section *@
                <div class="filter-section mb-4">
                    <h6 class="filter-section-title">
                        <i class="bi bi-building"></i> Counterparty Filters
                    </h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Counterparty Name</label>
                            <input type="text" class="form-control" @bind="searchRequest.CounterpartyName"
                                   placeholder="Search counterparty or third party name" maxlength="255" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Counterparty No.</label>
                            <input type="text" class="form-control" @bind="searchRequest.CounterpartyNo"
                                   placeholder="Exact counterparty number" maxlength="32" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Counterparty Country</label>
                            <select class="form-select" @bind="searchRequest.CounterpartyCountry">
                                <option value="">-- All Countries --</option>
                                @foreach (var country in countries)
                                {
                                    <option value="@country.CountryCode">@country.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Counterparty City</label>
                            <input type="text" class="form-control" @bind="searchRequest.CounterpartyCity"
                                   placeholder="Search city" maxlength="128" />
                        </div>
                    </div>
                </div>

                @* Document Attributes Section *@
                <div class="filter-section mb-4">
                    <h6 class="filter-section-title">
                        <i class="bi bi-toggles"></i> Document Attributes
                    </h6>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Fax</label>
                            <select class="form-select" @bind="searchRequest.Fax">
                                <option value="">-- Any --</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Original Received</label>
                            <select class="form-select" @bind="searchRequest.OriginalReceived">
                                <option value="">-- Any --</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Confidential</label>
                            <select class="form-select" @bind="searchRequest.Confidential">
                                <option value="">-- Any --</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Bank Confirmation</label>
                            <select class="form-select" @bind="searchRequest.BankConfirmation">
                                <option value="">-- Any --</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Authorisation To</label>
                            <input type="text" class="form-control" @bind="searchRequest.Authorisation"
                                   placeholder="Search authorisation" maxlength="255" />
                        </div>
                    </div>
                </div>

                @* Financial Filters Section *@
                <div class="filter-section mb-4">
                    <h6 class="filter-section-title">
                        <i class="bi bi-currency-dollar"></i> Financial Filters
                    </h6>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Amount From</label>
                            <input type="number" class="form-control" @bind="searchRequest.AmountFrom"
                                   placeholder="Min amount" step="0.01" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Amount To</label>
                            <input type="number" class="form-control" @bind="searchRequest.AmountTo"
                                   placeholder="Max amount" step="0.01" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Currency</label>
                            <select class="form-select" @bind="searchRequest.CurrencyCode">
                                <option value="">-- All Currencies --</option>
                                @foreach (var currency in currencies)
                                {
                                    <option value="@currency.CurrencyCode">@currency.DisplayText</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                @* Date Filters Section *@
                <div class="filter-section mb-4">
                    <h6 class="filter-section-title">
                        <i class="bi bi-calendar-range"></i> Date Filters
                    </h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date of Contract - From</label>
                            <input type="date" class="form-control" @bind="searchRequest.DateOfContractFrom" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Date of Contract - To</label>
                            <input type="date" class="form-control" @bind="searchRequest.DateOfContractTo" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Receiving Date - From</label>
                            <input type="date" class="form-control" @bind="searchRequest.ReceivingDateFrom" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Receiving Date - To</label>
                            <input type="date" class="form-control" @bind="searchRequest.ReceivingDateTo" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sending Out Date - From</label>
                            <input type="date" class="form-control" @bind="searchRequest.SendingOutDateFrom" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sending Out Date - To</label>
                            <input type="date" class="form-control" @bind="searchRequest.SendingOutDateTo" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Forwarded to Signatories Date - From</label>
                            <input type="date" class="form-control" @bind="searchRequest.ForwardedToSignatoriesDateFrom" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Forwarded to Signatories Date - To</label>
                            <input type="date" class="form-control" @bind="searchRequest.ForwardedToSignatoriesDateTo" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Dispatch Date - From</label>
                            <input type="date" class="form-control" @bind="searchRequest.DispatchDateFrom" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Dispatch Date - To</label>
                            <input type="date" class="form-control" @bind="searchRequest.DispatchDateTo" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Action Date - From</label>
                            <input type="date" class="form-control" @bind="searchRequest.ActionDateFrom" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Action Date - To</label>
                            <input type="date" class="form-control" @bind="searchRequest.ActionDateTo" />
                        </div>
                    </div>
                </div>

                @* Action Buttons *@
                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-secondary" @onclick="ClearFilters">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </button>
                    <button class="btn btn-primary" @onclick="ExecuteSearch" disabled="@isSearching">
                        @if (isSearching)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-search me-2"></i>
                        }
                        Search
                    </button>
                </div>
            }
        </div>
    </div>

    @* Results Section *@
    <div class="card">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0 d-inline">
                    <i class="bi bi-list-ul"></i> Search Results
                </h5>
                @if (searchResults != null)
                {
                    <span class="badge bg-light text-dark ms-2">@searchResults.TotalCount result(s)</span>
                    @if (searchResults.MaxLimitReached)
                    {
                        <span class="badge bg-warning text-dark ms-2">Max limit reached (@searchResults.MaxLimit)</span>
                    }
                }
            </div>
            @if (searchResults != null && searchResults.Items.Any())
            {
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-light" @onclick="SelectAllOnPage" disabled="@(selectedDocumentIds.Count == searchResults.Items.Count)">
                        <i class="bi bi-check-square"></i> Select All
                    </button>
                    <button class="btn btn-light" @onclick="DeselectAll" disabled="@(!selectedDocumentIds.Any())">
                        <i class="bi bi-square"></i> Deselect All
                    </button>
                    <button class="btn btn-light" @onclick="InvertSelection">
                        <i class="bi bi-arrow-repeat"></i> Invert
                    </button>
                </div>
            }
        </div>
        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                </div>
            }

            @if (searchResults == null)
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-search" style="font-size: 3rem;"></i>
                    <p class="mt-3">Start your search by entering the criteria above.</p>
                </div>
            }
            else if (searchResults.Items.Count == 0)
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-3">No documents found matching your criteria.</p>
                </div>
            }
            else
            {
                @* Selection Info and Bulk Actions *@
                @if (selectedDocumentIds.Any())
                {
                    <div class="alert alert-info d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-info-circle"></i> <strong>@selectedDocumentIds.Count</strong> document(s) selected</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-danger" disabled>
                                <i class="bi bi-trash"></i> Delete Selected
                            </button>
                            <button class="btn btn-primary" disabled>
                                <i class="bi bi-printer"></i> Print Summary
                            </button>
                            <button class="btn btn-primary" disabled>
                                <i class="bi bi-printer-fill"></i> Print Detailed
                            </button>
                            <button class="btn btn-success" disabled>
                                <i class="bi bi-envelope"></i> Email (Attach)
                            </button>
                            <button class="btn btn-success" disabled>
                                <i class="bi bi-link-45deg"></i> Email (Link)
                            </button>
                        </div>
                    </div>
                }

                @* Results Table *@
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th style="width: 40px;">
                                    <input type="checkbox" class="form-check-input"
                                           checked="@(selectedDocumentIds.Count == searchResults.Items.Count && searchResults.Items.Any())"
                                           @onchange="@((e) => ToggleSelectAll((bool)e.Value!))" />
                                </th>
                                <th style="width: 100px;">
                                    <a href="#" @onclick="@(() => ToggleSort("barcode"))" @onclick:preventDefault class="text-decoration-none text-dark">
                                        Bar Code @GetSortIcon("barcode")
                                    </a>
                                </th>
                                <th>
                                    <a href="#" @onclick="@(() => ToggleSort("documenttype"))" @onclick:preventDefault class="text-decoration-none text-dark">
                                        Document Type @GetSortIcon("documenttype")
                                    </a>
                                </th>
                                <th>
                                    <a href="#" @onclick="@(() => ToggleSort("documentname"))" @onclick:preventDefault class="text-decoration-none text-dark">
                                        Document Name @GetSortIcon("documentname")
                                    </a>
                                </th>
                                <th>
                                    <a href="#" @onclick="@(() => ToggleSort("counterparty"))" @onclick:preventDefault class="text-decoration-none text-dark">
                                        Counterparty @GetSortIcon("counterparty")
                                    </a>
                                </th>
                                <th style="width: 120px;">
                                    <a href="#" @onclick="@(() => ToggleSort("counterpartyno"))" @onclick:preventDefault class="text-decoration-none text-dark">
                                        CP No. @GetSortIcon("counterpartyno")
                                    </a>
                                </th>
                                <th>
                                    <a href="#" @onclick="@(() => ToggleSort("country"))" @onclick:preventDefault class="text-decoration-none text-dark">
                                        Country @GetSortIcon("country")
                                    </a>
                                </th>
                                <th>Third Party</th>
                                <th style="width: 110px;">
                                    <a href="#" @onclick="@(() => ToggleSort("dateofcontract"))" @onclick:preventDefault class="text-decoration-none text-dark">
                                        Contract Date @GetSortIcon("dateofcontract")
                                    </a>
                                </th>
                                <th>Comment</th>
                                <th style="width: 60px;">Fax</th>
                                <th style="width: 80px;">Original</th>
                                <th>Doc No.</th>
                                <th>PUA/Agr.</th>
                                <th>Version</th>
                                <th style="width: 80px;">Currency</th>
                                <th style="width: 120px;" class="text-end">Amount</th>
                                <th style="width: 100px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in searchResults.Items)
                            {
                                <tr class="@(selectedDocumentIds.Contains(doc.Id) ? "table-active" : "")">
                                    <td>
                                        <input type="checkbox" class="form-check-input"
                                               checked="@selectedDocumentIds.Contains(doc.Id)"
                                               @onchange="@((e) => ToggleSelectDocument(doc.Id, (bool)e.Value!))" />
                                    </td>
                                    <td>
                                        <a href="/documents/edit/@doc.BarCode" class="text-decoration-none">
                                            @doc.BarCode
                                        </a>
                                    </td>
                                    <td><small>@doc.DocumentType</small></td>
                                    <td><small>@doc.DocumentName</small></td>
                                    <td><small>@doc.Counterparty</small></td>
                                    <td><small>@doc.CounterpartyNo</small></td>
                                    <td><small>@doc.Country</small></td>
                                    <td><small class="text-muted">@doc.ThirdParty</small></td>
                                    <td><small>@doc.DateOfContract?.ToString("yyyy-MM-dd")</small></td>
                                    <td><small class="text-truncate" style="max-width: 150px;" title="@doc.Comment">@doc.Comment</small></td>
                                    <td><small>@FormatBoolean(doc.Fax)</small></td>
                                    <td><small>@FormatBoolean(doc.OriginalReceived)</small></td>
                                    <td><small>@doc.DocumentNo</small></td>
                                    <td><small>@doc.AssociatedToPua</small></td>
                                    <td><small>@doc.VersionNo</small></td>
                                    <td><small>@doc.CurrencyCode</small></td>
                                    <td class="text-end"><small>@doc.Amount?.ToString("N2")</small></td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item disabled" href="#"><i class="bi bi-file-pdf"></i> Open PDF</a></li>
                                                <li><a class="dropdown-item disabled" href="#"><i class="bi bi-eye"></i> View Properties</a></li>
                                                <li><a class="dropdown-item" href="/documents/edit/@doc.BarCode"><i class="bi bi-pencil"></i> Edit Properties</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item disabled" href="#"><i class="bi bi-envelope"></i> Email (Attach)</a></li>
                                                <li><a class="dropdown-item disabled" href="#"><i class="bi bi-link-45deg"></i> Email (Link)</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item disabled text-danger" href="#"><i class="bi bi-trash"></i> Delete</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Pagination Controls *@
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <small class="text-muted">
                            Showing @((searchResults.CurrentPage - 1) * searchResults.PageSize + 1)
                            to @Math.Min(searchResults.CurrentPage * searchResults.PageSize, searchResults.TotalCount)
                            of @searchResults.TotalCount results
                        </small>
                    </div>
                    <div class="d-flex gap-2 align-items-center">
                        <label class="me-2"><small>Page size:</small></label>
                        <select class="form-select form-select-sm" style="width: auto;" @bind="searchRequest.PageSize" @bind:after="OnPageSizeChanged">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="100">100</option>
                        </select>

                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(searchResults.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link" href="#" @onclick="@(() => GoToPage(searchResults.CurrentPage - 1))" @onclick:preventDefault>
                                        Previous
                                    </a>
                                </li>
                                @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                                {
                                    var pageNum = i;
                                    <li class="page-item @(pageNum == searchResults.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="#" @onclick="@(() => GoToPage(pageNum))" @onclick:preventDefault>
                                            @pageNum
                                        </a>
                                    </li>
                                }
                                <li class="page-item @(searchResults.HasNextPage ? "" : "disabled")">
                                    <a class="page-link" href="#" @onclick="@(() => GoToPage(searchResults.CurrentPage + 1))" @onclick:preventDefault>
                                        Next
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .filter-section {
        border-left: 3px solid #0d6efd;
        padding-left: 1rem;
    }

    .filter-section-title {
        color: #0d6efd;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.25rem;
    }

    .card-header {
        font-weight: 600;
    }
</style>
