@page "/documents/search"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@using IkeaDocuScan.Shared.DTOs.Documents
@using IkeaDocuScan.Shared.DTOs.DocumentTypes
@using IkeaDocuScan.Shared.DTOs.CounterParties
@using IkeaDocuScan.Shared.DTOs.Currencies
@using IkeaDocuScan_Web.Client.Models
@using IkeaDocuScan_Web.Client.Components
@using IkeaDocuScan_Web.Client.Components.Shared
@using static IkeaDocuScan_Web.Client.Components.Shared.CounterPartyAutocomplete

<PageTitle>Search Documents</PageTitle>

<div class="container-fluid">
    <h3 class="mb-4">Search Documents</h3>

    @* Filter Panel *@
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Filter Criteria
            </h5>
        </div>
        <div class="card-body">
            @if (isLoadingReferenceData)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading reference data...</p>
                </div>
            }
            else
            {
                @* General Filters Section *@
                <div class="filter-section mb-3">
                    <h6 class="filter-section-title">
                        <i class="bi bi-file-earmark-text"></i> General Filters
                    </h6>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Search String:</label>
                                <input type="text" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.SearchString"
                                       placeholder="PDF content search" maxlength="255" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Barcodes:</label>
                                <input type="text" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.Barcodes"
                                       placeholder="e.g., 12345,67890" maxlength="256" />
                            </div>
                        </div>
                    </div>
                    <div class="row g-2 mt-1">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-2">
                                <label class="form-label-inline" style="padding-top: 0.25rem;">Doc Types:</label>
                                <div class="flex-grow-1">
                                    @* Selected tags display *@
                                    @if (searchRequest.DocumentTypeIds.Any())
                                    {
                                        <div class="selected-tags mb-2">
                                            @foreach (var typeId in searchRequest.DocumentTypeIds)
                                            {
                                                var docType = documentTypes.FirstOrDefault(dt => dt.DtId == typeId);
                                                if (docType != null)
                                                {
                                                    <span class="badge bg-primary me-1 mb-1">
                                                        @docType.DtName
                                                        <button type="button" class="btn-close btn-close-white ms-1"
                                                                style="font-size: 0.6rem; padding: 0.1rem;"
                                                                @onclick="@(() => RemoveDocumentType(typeId))"
                                                                aria-label="Remove"></button>
                                                    </span>
                                                }
                                            }
                                        </div>
                                    }
                                    @* Dropdown to add document types *@
                                    <select class="form-select form-select-sm doc-types-select"
                                            @onchange="AddDocumentType"
                                            value="">
                                        <option value="">-- Select to add --</option>
                                        @foreach (var dt in documentTypes.Where(dt => !searchRequest.DocumentTypeIds.Contains(dt.DtId)))
                                        {
                                            <option value="@dt.DtId">@dt.DtName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Doc Name:</label>
                                <select class="form-select form-select-sm flex-grow-1 doc-name-select" @bind="searchRequest.DocumentNameId">
                                    <option value="">-- All --</option>
                                    @foreach (var dn in GetFilteredDocumentNames())
                                    {
                                        <option value="@dn.Id">@dn.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row g-2 mt-1">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Doc Number:</label>
                                <input type="text" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.DocumentNumber"
                                       placeholder="Document number" maxlength="255" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Version:</label>
                                <input type="text" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.VersionNo"
                                       placeholder="Version number" maxlength="255" />
                            </div>
                        </div>
                    </div>
                    <div class="row g-2 mt-1">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">PUA/Agr No:</label>
                                <input type="text" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.AssociatedToPua"
                                       placeholder="PUA/Agreement number" maxlength="255" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Appendix No:</label>
                                <input type="text" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.AssociatedToAppendix"
                                       placeholder="Appendix number" maxlength="255" />
                            </div>
                        </div>
                    </div>
                </div>

                @* Counterparty Filters Section *@
                <div class="filter-section mb-3">
                    <h6 class="filter-section-title">
                        <i class="bi bi-building"></i> Counterparty Filters
                    </h6>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">CP Name:</label>
                                <CounterPartyAutocomplete @bind-Value="searchRequest.CounterpartyName"
                                                         SearchField="CounterPartySearchField.Name"
                                                         Placeholder="Search counterparty by name..."
                                                         InputClass="form-control form-control-sm flex-grow-1"
                                                         CounterParties="@counterParties"
                                                         OnCounterPartySelected="@OnCounterPartyNameSelected" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">CP No:</label>
                                <CounterPartyAutocomplete @bind-Value="searchRequest.CounterpartyNo"
                                                         SearchField="CounterPartySearchField.Number"
                                                         Placeholder="Search by counterparty number..."
                                                         InputClass="form-control form-control-sm flex-grow-1"
                                                         CounterParties="@counterParties"
                                                         OnCounterPartySelected="@OnCounterPartyNoSelected" />
                            </div>
                        </div>
                    </div>
                    <div class="row g-2 mt-1">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">CP Country:</label>
                                <select class="form-select form-select-sm flex-grow-1" @bind="searchRequest.CounterpartyCountry">
                                    <option value="">-- All --</option>
                                    @foreach (var country in countries)
                                    {
                                        <option value="@country.CountryCode">@country.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">CP City:</label>
                                <input type="text" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.CounterpartyCity"
                                       placeholder="City" maxlength="128" />
                            </div>
                        </div>
                    </div>
                </div>

                @* Document Attributes Section *@
                <div class="filter-section mb-3">
                    <h6 class="filter-section-title">
                        <i class="bi bi-toggles"></i> Document Attributes
                    </h6>
                    <div class="row g-2">
                        <div class="col-md-3">
                            <BooleanRadioControl Label="Fax:" @bind-Value="@searchRequest.Fax" ShowClearButton="true" />
                        </div>
                        <div class="col-md-3">
                            <BooleanRadioControl Label="Original:" @bind-Value="@searchRequest.OriginalReceived" ShowClearButton="true" />
                        </div>
                        <div class="col-md-3">
                            <BooleanRadioControl Label="Confidential:" @bind-Value="@searchRequest.Confidential" ShowClearButton="true" />
                        </div>
                        <div class="col-md-3">
                            <BooleanRadioControl Label="Bank Conf:" @bind-Value="@searchRequest.BankConfirmation" ShowClearButton="true" />
                        </div>
                    </div>
                    <div class="row g-2 mt-1">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Authorisation:</label>
                                <input type="text" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.Authorisation"
                                       placeholder="Authorisation to" maxlength="255" />
                            </div>
                        </div>
                    </div>
                </div>

                @* Financial Filters Section *@
                <div class="filter-section mb-3">
                    <h6 class="filter-section-title">
                        <i class="bi bi-currency-dollar"></i> Financial Filters
                    </h6>
                    <div class="row g-2">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline-short">Amount From:</label>
                                <input type="number" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.AmountFrom"
                                       placeholder="Min" step="0.01" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline-short">Amount To:</label>
                                <input type="number" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.AmountTo"
                                       placeholder="Max" step="0.01" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline-short">Currency:</label>
                                <select class="form-select form-select-sm flex-grow-1 currency-select" @bind="searchRequest.CurrencyCode">
                                    <option value="">-- All --</option>
                                    @foreach (var currency in currencies)
                                    {
                                        <option value="@currency.CurrencyCode">@currency.DisplayText</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                @* Date Filters Section *@
                <div class="filter-section mb-3">
                    <h6 class="filter-section-title">
                        <i class="bi bi-calendar-range"></i> Date Filters
                    </h6>
                    <div class="row g-2">
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Contract From:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.DateOfContractFrom" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Contract To:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.DateOfContractTo" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Receiving From:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.ReceivingDateFrom" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Receiving To:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.ReceivingDateTo" />
                            </div>
                        </div>
                    </div>
                    <div class="row g-2 mt-1">
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Sending From:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.SendingOutDateFrom" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Sending To:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.SendingOutDateTo" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Fwd Signat From:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.ForwardedToSignatoriesDateFrom" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Fwd Signat To:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.ForwardedToSignatoriesDateTo" />
                            </div>
                        </div>
                    </div>
                    <div class="row g-2 mt-1">
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Dispatch From:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.DispatchDateFrom" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Dispatch To:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.DispatchDateTo" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Action From:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.ActionDateFrom" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label-inline">Action To:</label>
                                <input type="date" class="form-control form-control-sm flex-grow-1" @bind="searchRequest.ActionDateTo" />
                            </div>
                        </div>
                    </div>
                </div>

                @* Action Buttons *@
                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-secondary" @onclick="ClearFilters">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </button>
                    <button class="btn btn-primary" @onclick="ExecuteSearch" disabled="@isSearching">
                        @if (isSearching)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-search me-2"></i>
                        }
                        Search
                    </button>
                </div>
            }
        </div>
    </div>

    @* Results Section *@
    <div class="card">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0 d-inline">
                    <i class="bi bi-list-ul"></i> Search Results
                </h5>
                @if (searchResults != null)
                {
                    <span class="badge bg-light text-dark ms-2">@searchResults.TotalCount result(s)</span>
                    @if (searchResults.MaxLimitReached)
                    {
                        <span class="badge bg-warning text-dark ms-2">Max limit reached (@searchResults.MaxLimit)</span>
                    }
                }
            </div>
            @if (searchResults != null && searchResults.Items.Any())
            {
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-light" @onclick="SelectAllOnPage" disabled="@(selectedDocumentIds.Count == searchResults.Items.Count)">
                        <i class="bi bi-check-square"></i> Select All
                    </button>
                    <button class="btn btn-light" @onclick="DeselectAll" disabled="@(!selectedDocumentIds.Any())">
                        <i class="bi bi-square"></i> Deselect All
                    </button>
                    <button class="btn btn-light" @onclick="InvertSelection">
                        <i class="bi bi-arrow-repeat"></i> Invert
                    </button>
                </div>
            }
        </div>
        <div class="card-body">
            @if (errorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                </div>
            }

            @if (searchResults == null)
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-search" style="font-size: 3rem;"></i>
                    <p class="mt-3">Start your search by entering the criteria above.</p>
                </div>
            }
            else if (searchResults.Items.Count == 0)
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-3">No documents found matching your criteria.</p>
                </div>
            }
            else
            {
                @* Selection Info and Bulk Actions *@
                @if (selectedDocumentIds.Any())
                {
                    <div class="alert alert-info d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-info-circle"></i> <strong>@selectedDocumentIds.Count</strong> document(s) selected</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-danger" @onclick="DeleteSelected">
                                <i class="bi bi-trash"></i> Delete Selected
                            </button>
                            <button class="btn btn-primary" @onclick="PrintSummary">
                                <i class="bi bi-printer"></i> Print Summary
                            </button>
                            <button class="btn btn-primary" @onclick="ExportSelectedToExcel">
                                <i class="bi bi-printer-fill"></i> Print Detailed
                            </button>
                            @if (HasSelectedDocumentWithoutFile())
                            {
                                <button type="button" class="btn btn-warning" disabled
                                        title="Cannot send email: one or more selected documents have no PDF file">
                                    <i class="bi bi-exclamation-triangle-fill text-dark"></i> Some selected documents have no PDF
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-success" @onclick="BulkEmailAttach">
                                    <i class="bi bi-envelope"></i> Email (Attach)
                                </button>
                                <button class="btn btn-success" @onclick="BulkEmailLink">
                                    <i class="bi bi-link-45deg"></i> Email (Link)
                                </button>
                            }
                        </div>
                    </div>
                }

                @* Results Table *@
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th style="width: 40px;">
                                    <input type="checkbox" class="form-check-input"
                                           checked="@(selectedDocumentIds.Count == searchResults.Items.Count && searchResults.Items.Any())"
                                           @onchange="@((e) => ToggleSelectAll((bool)e.Value!))" />
                                </th>
                                <th style="width: 100px;">
                                    <span class="sortable-header" @onclick="@(() => ToggleSort("barcode"))">
                                        Bar Code @GetSortIcon("barcode")
                                    </span>
                                </th>
                                <th>
                                    <span class="sortable-header" @onclick="@(() => ToggleSort("documenttype"))">
                                        Document Type @GetSortIcon("documenttype")
                                    </span>
                                </th>
                                <th>
                                    <span class="sortable-header" @onclick="@(() => ToggleSort("documentname"))">
                                        Document Name @GetSortIcon("documentname")
                                    </span>
                                </th>
                                <th>
                                    <span class="sortable-header" @onclick="@(() => ToggleSort("counterparty"))">
                                        Counterparty @GetSortIcon("counterparty")
                                    </span>
                                </th>
                                <th style="width: 120px;">
                                    <span class="sortable-header" @onclick="@(() => ToggleSort("counterpartyno"))">
                                        CP No. @GetSortIcon("counterpartyno")
                                    </span>
                                </th>
                                <th>
                                    <span class="sortable-header" @onclick="@(() => ToggleSort("country"))">
                                        Country @GetSortIcon("country")
                                    </span>
                                </th>
                                <th>Third Party</th>
                                <th style="width: 110px;">
                                    <span class="sortable-header" @onclick="@(() => ToggleSort("dateofcontract"))">
                                        Contract Date @GetSortIcon("dateofcontract")
                                    </span>
                                </th>
                                <th>Comment</th>
                                <th style="width: 60px;">Fax</th>
                                <th style="width: 80px;">Original</th>
                                <th>Doc No.</th>
                                <th>PUA/Agr.</th>
                                <th>Version</th>
                                <th style="width: 80px;">Currency</th>
                                <th style="width: 120px;" class="text-end">Amount</th>
                                <th style="width: 100px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in searchResults.Items)
                            {
                                <tr class="@(selectedDocumentIds.Contains(doc.Id) ? "table-active" : "")">
                                    <td>
                                        <input type="checkbox" class="form-check-input"
                                               checked="@selectedDocumentIds.Contains(doc.Id)"
                                               @onchange="@((e) => ToggleSelectDocument(doc.Id, (bool)e.Value!))" />
                                    </td>
                                    <td>
                                        <a href="/documents/edit/@doc.BarCode" class="text-decoration-none">
                                            @doc.BarCode
                                        </a>
                                    </td>
                                    <td><small>@doc.DocumentType</small></td>
                                    <td><small>@doc.DocumentName</small></td>
                                    <td><small>@doc.Counterparty</small></td>
                                    <td><small>@doc.CounterpartyNo</small></td>
                                    <td><small>@doc.Country</small></td>
                                    <td><small class="text-muted">@doc.ThirdParty</small></td>
                                    <td><small>@doc.DateOfContract?.ToString("yyyy-MM-dd")</small></td>
                                    <td><small class="text-truncate" style="max-width: 150px;" title="@doc.Comment">@doc.Comment</small></td>
                                    <td><small>@FormatBoolean(doc.Fax)</small></td>
                                    <td><small>@FormatBoolean(doc.OriginalReceived)</small></td>
                                    <td><small>@doc.DocumentNo</small></td>
                                    <td><small>@doc.AssociatedToPua</small></td>
                                    <td><small>@doc.VersionNo</small></td>
                                    <td><small>@doc.CurrencyCode</small></td>
                                    <td class="text-end"><small>@doc.Amount?.ToString("N2")</small></td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                @if (doc.HasFile)
                                                {
                                                    <li><button type="button" class="dropdown-item" @onclick="@(() => OpenPdf(doc.Id))"><i class="bi bi-file-pdf"></i> Open PDF</button></li>
                                                }
                                                <li><button type="button" class="dropdown-item" @onclick="@(() => ViewProperties(doc.Id))"><i class="bi bi-eye"></i> View Properties</button></li>
                                                <li><a class="dropdown-item" href="/documents/edit/@doc.BarCode"><i class="bi bi-pencil"></i> Edit Properties</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                @if (doc.HasFile)
                                                {
                                                    <li><button type="button" class="dropdown-item" @onclick="@(() => SendEmailAttach(doc.Id))"><i class="bi bi-envelope"></i> Email (Attach)</button></li>
                                                    <li><button type="button" class="dropdown-item" @onclick="@(() => SendEmailLink(doc.Id))"><i class="bi bi-link-45deg"></i> Email (Link)</button></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                }
                                                <li><button type="button" class="dropdown-item text-danger" @onclick="@(() => DeleteDocument(doc.Id, doc.BarCode))"><i class="bi bi-trash"></i> Delete</button></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Pagination Controls *@
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <small class="text-muted">
                            Showing @((searchResults.CurrentPage - 1) * searchResults.PageSize + 1)
                            to @Math.Min(searchResults.CurrentPage * searchResults.PageSize, searchResults.TotalCount)
                            of @searchResults.TotalCount results
                        </small>
                    </div>
                    <div class="d-flex gap-2 align-items-center">
                        <label class="me-2"><small>Page size:</small></label>
                        <select class="form-select form-select-sm" style="width: auto;" @bind="searchRequest.PageSize" @bind:after="OnPageSizeChanged">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="100">100</option>
                        </select>

                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(searchResults.HasPreviousPage ? "" : "disabled")">
                                    <button type="button" class="page-link" @onclick="@(() => GoToPage(searchResults.CurrentPage - 1))" disabled="@(!searchResults.HasPreviousPage)">
                                        Previous
                                    </button>
                                </li>
                                @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                                {
                                    var pageNum = i;
                                    <li class="page-item @(pageNum == searchResults.CurrentPage ? "active" : "")">
                                        <button type="button" class="page-link" @onclick="@(() => GoToPage(pageNum))">
                                            @pageNum
                                        </button>
                                    </li>
                                }
                                <li class="page-item @(searchResults.HasNextPage ? "" : "disabled")">
                                    <button type="button" class="page-link" @onclick="@(() => GoToPage(searchResults.CurrentPage + 1))" disabled="@(!searchResults.HasNextPage)">
                                        Next
                                    </button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

