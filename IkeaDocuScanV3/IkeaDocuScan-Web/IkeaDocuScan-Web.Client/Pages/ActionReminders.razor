@page "/action-reminders"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@attribute [Authorize(Policy = "HasAccess")]
@using IkeaDocuScan.Shared.DTOs.ActionReminders
@using IkeaDocuScan.Shared.DTOs.DocumentTypes
@using IkeaDocuScan.Shared.DTOs.CounterParties
@using IkeaDocuScan.Shared.Interfaces
@using Microsoft.AspNetCore.Authorization
@inject IActionReminderService ActionReminderService
@inject IDocumentTypeService DocumentTypeService
@inject ILogger<ActionReminders> Logger
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Action Reminders - IkeaDocuScan</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="mb-0">
                <i class="bi bi-calendar-check text-primary"></i> Action Reminders
                @if (totalCount > 0)
                {
                    <span class="badge bg-danger ms-2">@totalCount</span>
                }
            </h1>
            <p class="text-muted mb-0">View and export documents with due actions</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong><i class="bi bi-exclamation-triangle"></i> Error:</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-3">
        <div class="card-header">
            <button class="btn btn-link text-decoration-none w-100 text-start" type="button" @onclick="ToggleFilters">
                <i class="bi @(showFilters ? "bi-chevron-up" : "bi-chevron-down")"></i>
                <strong>Filters</strong>
            </button>
        </div>
        @if (showFilters)
        {
            <div class="card-body">
                <div class="row g-3">
                    <!-- Date Range -->
                    <div class="col-md-6">
                        <label class="form-label">Date From</label>
                        <input type="date" class="form-control" @bind="searchRequest.DateFrom" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date To</label>
                        <input type="date" class="form-control" @bind="searchRequest.DateTo" />
                    </div>

                    <!-- Quick Filters -->
                    <div class="col-12">
                        <label class="form-label">Quick Filters</label>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary btn-sm" @onclick="() => SetQuickFilter(QuickFilterType.Today)">
                                <i class="bi bi-calendar-day"></i> Today
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm" @onclick="() => SetQuickFilter(QuickFilterType.ThisWeek)">
                                <i class="bi bi-calendar-week"></i> This Week
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm" @onclick="() => SetQuickFilter(QuickFilterType.ThisMonth)">
                                <i class="bi bi-calendar-month"></i> This Month
                            </button>
                            <button type="button" class="btn btn-outline-danger btn-sm" @onclick="() => SetQuickFilter(QuickFilterType.Overdue)">
                                <i class="bi bi-exclamation-triangle"></i> Overdue
                            </button>
                        </div>
                    </div>

                    <!-- Document Type Filter -->
                    <div class="col-md-6">
                        <label class="form-label">Document Type</label>
                        <select class="form-select" @onchange="OnDocumentTypeChanged">
                            <option value="">-- All Document Types --</option>
                            @if (documentTypes != null)
                            {
                                @foreach (var dt in documentTypes)
                                {
                                    <option value="@dt.DtId" selected="@(selectedDocumentTypeId == dt.DtId)">@dt.DtName</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Counter Party Search -->
                    <div class="col-md-6">
                        <label class="form-label">Counter Party Name</label>
                        <input type="text" class="form-control" placeholder="Search counter party name..." @bind="searchRequest.CounterPartySearch" />
                        <small class="text-muted">Enter part of the counter party name</small>
                    </div>

                    <!-- Search String -->
                    <div class="col-12">
                        <label class="form-label">Search</label>
                        <input type="text" class="form-control" placeholder="Search in barcode, document name, comment, action description..." @bind="searchRequest.SearchString" />
                    </div>

                    <!-- Filter Options -->
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="includeFutureActions" @bind="searchRequest.IncludeFutureActions" />
                            <label class="form-check-label" for="includeFutureActions">
                                Include future actions
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="includeOverdueOnly" @bind="searchRequest.IncludeOverdueOnly" />
                            <label class="form-check-label" for="includeOverdueOnly">
                                Show overdue actions only
                            </label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12">
                        <button class="btn btn-primary" @onclick="ApplyFiltersAsync" disabled="@isLoading">
                            <i class="bi bi-filter"></i> Apply Filters
                        </button>
                        <button class="btn btn-secondary ms-2" @onclick="ClearFiltersAsync" disabled="@isLoading">
                            <i class="bi bi-x-circle"></i> Clear Filters
                        </button>
                        <button class="btn btn-outline-secondary ms-2" @onclick="RefreshAsync" disabled="@isLoading">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading action reminders...</p>
        </div>
    }
    else if (actionReminders == null || !actionReminders.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No action reminders found.
            @if (searchRequest.DateFrom.HasValue || searchRequest.DateTo.HasValue ||
                 !string.IsNullOrEmpty(searchRequest.SearchString))
            {
                <text>Try adjusting your filters.</text>
            }
        </div>
    }
    else
    {
        <!-- Results Summary -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Total Actions:</strong> <span class="badge bg-primary">@totalCount</span>
                        <span class="text-muted ms-3">Last updated: @lastUpdated.ToString("HH:mm:ss")</span>
                    </div>
                    <div>
                        <button class="btn btn-success" @onclick="ExportToExcel" disabled="@isLoading">
                            <i class="bi bi-file-earmark-spreadsheet"></i> Export to Excel
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Grid -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Barcode</th>
                                <th>Document Type</th>
                                <th>Document Name</th>
                                <th>Document No</th>
                                <th>Counterparty</th>
                                <th>Action Date</th>
                                <th>Receiving Date</th>
                                <th>Action Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var action in actionReminders)
                            {
                                <tr class="@GetRowClass(action)">
                                    <td>
                                        <a href="/documents/properties/@action.DocumentId" class="text-decoration-none">
                                            <strong>@action.BarCode</strong>
                                        </a>
                                    </td>
                                    <td>@action.DocumentType</td>
                                    <td>@action.DocumentName</td>
                                    <td>@action.DocumentNo</td>
                                    <td>@action.CounterParty</td>
                                    <td>
                                        @if (action.ActionDate.HasValue)
                                        {
                                            <span class="@GetDateBadgeClass(action.ActionDate.Value)">
                                                @action.ActionDate.Value.ToString("dd/MM/yyyy")
                                            </span>
                                        }
                                    </td>
                                    <td>@action.ReceivingDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@action.ActionDescription</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Barcode link styling */
    td a {
        color: #0d6efd;
        transition: color 0.15s ease-in-out;
    }

    td a:hover {
        color: #0a58ca;
        text-decoration: underline !important;
    }

    td a strong {
        font-weight: 600;
    }
</style>

@code {
    private enum QuickFilterType
    {
        Today,
        ThisWeek,
        ThisMonth,
        Overdue
    }
}
