@if (Horizontal)
{
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">@Label:</label>
        <div class="col-sm-9">
            @if (Plaintext)
            {
                <input type="text" readonly class="form-control-plaintext" value="@Value" />
            }
            else
            {
                <input type="text" readonly class="form-control" value="@Value" />
            }
        </div>
    </div>
}
else
{
    <div class="mb-3">
        <label class="form-label">@Label:</label>
        @if (Plaintext)
        {
            <input type="text" readonly class="form-control-plaintext" value="@Value" />
        }
        else
        {
            <input type="text" readonly class="form-control" value="@Value" />
        }
    </div>
}

@code {
    /// <summary>
    /// Field label
    /// </summary>
    [Parameter]
    public string Label { get; set; } = string.Empty;

    /// <summary>
    /// Field value to display
    /// </summary>
    [Parameter]
    public string? Value { get; set; }

    /// <summary>
    /// Whether to use horizontal layout
    /// </summary>
    [Parameter]
    public bool Horizontal { get; set; } = true;

    /// <summary>
    /// Whether to display as plaintext (no border)
    /// </summary>
    [Parameter]
    public bool Plaintext { get; set; } = true;
}
