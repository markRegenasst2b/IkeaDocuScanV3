@if (Errors != null && Errors.Any())
{
    <div class="alert alert-danger @(Dismissable ? "alert-dismissible fade show" : "")" role="alert">
        <h5 class="alert-heading">@Title</h5>
        <ul class="mb-0">
            @foreach (var error in Errors)
            {
                <li>@error</li>
            }
        </ul>
        @if (Dismissable)
        {
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        }
    </div>
}

@code {
    /// <summary>
    /// List of validation errors to display
    /// </summary>
    [Parameter]
    public List<string>? Errors { get; set; }

    /// <summary>
    /// Alert title
    /// Default: "Please correct the following errors:"
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "Please correct the following errors:";

    /// <summary>
    /// Whether the alert can be dismissed
    /// Default: false
    /// </summary>
    [Parameter]
    public bool Dismissable { get; set; } = false;
}
