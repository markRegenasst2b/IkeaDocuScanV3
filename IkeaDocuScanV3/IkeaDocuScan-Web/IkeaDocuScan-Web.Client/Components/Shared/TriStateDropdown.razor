@using Blazorise

<Select TValue="bool?" @bind-SelectedValue="@Value" Disabled="@Disabled">
    <SelectItem Value="@((bool?)null)">-- Select --</SelectItem>
    <SelectItem Value="@true">Yes</SelectItem>
    <SelectItem Value="@false">No</SelectItem>
</Select>

@code {
    /// <summary>
    /// The bound nullable boolean value.
    /// null = not selected, true = Yes, false = No
    /// </summary>
    [Parameter]
    public bool? Value { get; set; }

    /// <summary>
    /// Event callback when value changes
    /// </summary>
    [Parameter]
    public EventCallback<bool?> ValueChanged { get; set; }

    /// <summary>
    /// Whether the dropdown is disabled
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    /// <summary>
    /// Field label for validation messages
    /// </summary>
    [Parameter]
    public string? Label { get; set; }
}
