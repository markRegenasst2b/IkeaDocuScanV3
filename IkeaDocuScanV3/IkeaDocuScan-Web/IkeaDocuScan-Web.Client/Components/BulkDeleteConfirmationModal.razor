@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirm Bulk Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">
                        Are you sure you want to delete <strong>@DocumentCount</strong> document(s)?
                    </p>

                    @if (DocumentIdentifiers?.Any() == true)
                    {
                        <div class="alert alert-warning">
                            <strong>Documents to be deleted:</strong>
                            <div class="mt-2" style="max-height: 200px; overflow-y: auto;">
                                <ul class="mb-0">
                                    @foreach (var identifier in DocumentIdentifiers.Take(20))
                                    {
                                        <li><small>@identifier</small></li>
                                    }
                                    @if (DocumentIdentifiers.Count() > 20)
                                    {
                                        <li><small><em>... and @(DocumentIdentifiers.Count() - 20) more</em></small></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-circle"></i> @ErrorMessage
                        </div>
                    }

                    @if (DeleteProgress != null)
                    {
                        <div class="mt-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Deleting documents...</small>
                                <small>@DeleteProgress.Completed / @DeleteProgress.Total</small>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                     role="progressbar"
                                     style="width: @(DeleteProgress.PercentComplete)%"
                                     aria-valuenow="@DeleteProgress.PercentComplete"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                            @if (DeleteProgress.Failed > 0)
                            {
                                <small class="text-danger">@DeleteProgress.Failed failed</small>
                            }
                        </div>
                    }

                    <p class="text-danger mt-3 mb-0">
                        <small><i class="bi bi-info-circle"></i> This action cannot be undone.</small>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@IsDeleting">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="Confirm" disabled="@IsDeleting">
                        @if (IsDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-2"></i>
                        }
                        Delete All
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@using IkeaDocuScan_Web.Client.Models

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public int DocumentCount { get; set; }
    [Parameter] public IEnumerable<string>? DocumentIdentifiers { get; set; }
    [Parameter] public bool IsDeleting { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public BulkDeleteProgress? DeleteProgress { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync();
    }

    private async Task Cancel()
    {
        IsVisible = false;
        await OnCancel.InvokeAsync();
    }
}
