@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">Are you sure you want to delete this document?</p>

                    @if (!string.IsNullOrEmpty(DocumentIdentifier))
                    {
                        <div class="alert alert-warning mb-0">
                            <strong>Document:</strong> @DocumentIdentifier
                        </div>
                    }

                    <p class="text-danger mt-3 mb-0">
                        <small><i class="bi bi-info-circle"></i> This action cannot be undone.</small>
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@IsDeleting">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="Confirm" disabled="@IsDeleting">
                        @if (IsDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-trash me-2"></i>
                        }
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string? DocumentIdentifier { get; set; }
    [Parameter] public bool IsDeleting { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync();
    }

    private async Task Cancel()
    {
        IsVisible = false;
        await OnCancel.InvokeAsync();
    }
}
