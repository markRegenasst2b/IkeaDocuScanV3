{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=IkeaDocuScan;Integrated Security=true;TrustServerCertificate=True;"
  },
  "IkeaDocuScan": {
    "ScannedFilesPath": "/mnt/c/ScannedDocuments",
    "AllowedFileExtensions": [ ".pdf", ".jpg", ".jpeg", ".png", ".tif", ".tiff", ".bmp" ],
    "MaxFileSizeBytes": 52428800,
    "EnableFileListCaching": true,
    "CacheDurationSeconds": 60,
    "ContactEmail": "docuscan-admin@company.com",
    "ADGroupReader": "ADGroup.Builtin.Reader",
    "ADGroupPublisher": "ADGroup.Builtin.Publisher",
    "ADGroupSuperUser": "ADGroup.Builtin.SuperUser"
  },
  "DocumentSearch": {
    "MaxResults": 1000,
    "DefaultPageSize": 25,
    "PageSizeOptions": [ 10, 25, 100 ]
  },
  "ExcelExport": {
    "SheetName": "Documents Export",
    "IncludeHeader": true,
    "AutoFitColumns": true,
    "ApplyHeaderFormatting": true,
    "HeaderBackgroundColor": "#0051BA",
    "HeaderFontColor": "#FFFFFF",
    "FreezeHeaderRow": true,
    "EnableFilters": true,
    "MaxColumnWidth": 50,
    "DateFormat": "yyyy-MM-dd",
    "CurrencyFormat": "$#,##0.00",
    "NumberFormat": "#,##0.00",
    "PercentageFormat": "0.00%",
    "WarningRowCount": 10000,
    "MaximumRowCount": 50000,
    "ApplicationUrl": "https://localhost:44101/"
  },
  "Email": {
    "SmtpHost": "localhost",
    "SmtpPort": 25,
    "UseSsl": false,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromAddress": "noreply-docuscan@company.com",
    "FromDisplayName": "IKEA DocuScan System",
    "AdminEmail": "docuscan-admin@company.com",
    "AdditionalAdminEmails": [],
    "EnableEmailNotifications": true,
    "SendAccessRequestNotifications": true,
    "SendDocumentNotifications": true,
    "AccessRequestSubject": "New Access Request - IKEA DocuScan",
    "AccessRequestConfirmationSubject": "Your Access Request Has Been Received",
    "ApplicationUrl": "https://docuscan.company.com",
    "TimeoutSeconds": 30,
    "SearchResults": {
      "DefaultRecipient": "legal@ikea.com",
      "AttachEmailTemplate": "<!DOCTYPE html><html><head><meta charset='utf-8'><style>body{font-family:Arial,sans-serif;line-height:1.6;color:#333;margin:0;padding:0;background-color:#f5f5f5}.container{max-width:600px;margin:20px auto;background-color:#fff;border:1px solid #ddd}.header{background-color:#0051ba;color:#fff;padding:20px;text-align:center}.header h1{margin:0;font-size:24px}.content{padding:30px}.greeting{margin-bottom:20px}.document-list{background-color:#f9f9f9;border-left:4px solid #0051ba;padding:15px;margin:20px 0}.document-list h3{margin-top:0;color:#0051ba;font-size:16px}.document-item{padding:8px 0;border-bottom:1px solid #e0e0e0}.document-item:last-child{border-bottom:none}.barcode{font-weight:bold;color:#0051ba}.signature{margin-top:30px;padding-top:20px;border-top:1px solid #ddd;color:#666}.footer{background-color:#f5f5f5;padding:15px;text-align:center;font-size:12px;color:#666}</style></head><body><div class='container'><div class='header'><h1>IKEA DocuScan System</h1></div><div class='content'><div class='greeting'><p>Dear Recipient,</p></div><p>Please find attached <strong>{DocumentCount}</strong> document(s) from the IKEA DocuScan System. The documents are identified by the following barcodes:</p><div class='document-list'><h3>Document Overview</h3>{Barcodes}</div><p>The attached files contain official IKEA documents that have been processed through our document management system. Please review them at your earliest convenience.</p><p>If you have any questions regarding these documents or require additional information, please do not hesitate to contact the IKEA Legal Department.</p><div class='signature'><p>Best regards,<br><strong>IKEA DocuScan System</strong><br>Document Management & Archive</p></div></div><div class='footer'><p>This is an automated message from the IKEA DocuScan System. Please do not reply directly to this email.</p></div></div></body></html>",
      "AttachBarcodeItemTemplate": "<div class='document-item'><span class='barcode'>Barcode: {Barcode}</span><br><span class='doc-name'>{DocumentName}</span> | <span class='doc-type'>{DocumentType}</span></div>",
      "LinkEmailTemplate": "<!DOCTYPE html><html><head><meta charset='utf-8'><style>body{font-family:Arial,sans-serif;line-height:1.6;color:#333;margin:0;padding:0;background-color:#f5f5f5}.container{max-width:600px;margin:20px auto;background-color:#fff;border:1px solid #ddd}.header{background-color:#0051ba;color:#fff;padding:20px;text-align:center}.header h1{margin:0;font-size:24px}.content{padding:30px}.greeting{margin-bottom:20px}.document-list{background-color:#f9f9f9;border-left:4px solid #0051ba;padding:15px;margin:20px 0}.document-list h3{margin-top:0;color:#0051ba;font-size:16px}.document-item{padding:12px;margin:10px 0;background-color:#fff;border:1px solid #e0e0e0;border-radius:4px}.document-item:hover{background-color:#f0f8ff}.barcode{font-weight:bold;color:#0051ba;font-size:14px}.doc-details{color:#666;font-size:13px;margin:5px 0}.download-link{display:inline-block;margin-top:8px;padding:8px 16px;background-color:#0051ba;color:#fff;text-decoration:none;border-radius:4px;font-size:13px}.download-link:hover{background-color:#003d8f}.signature{margin-top:30px;padding-top:20px;border-top:1px solid #ddd;color:#666}.footer{background-color:#f5f5f5;padding:15px;text-align:center;font-size:12px;color:#666}.important-note{background-color:#fff3cd;border-left:4px solid #ffc107;padding:12px;margin:20px 0;font-size:13px}</style></head><body><div class='container'><div class='header'><h1>IKEA DocuScan System</h1></div><div class='content'><div class='greeting'><p>Dear Recipient,</p></div><p>You have been granted access to <strong>{DocumentCount}</strong> document(s) from the IKEA DocuScan System. Please use the secure links below to access and download the documents:</p><div class='document-list'><h3>Available Documents</h3>{Links}</div><div class='important-note'><strong>Important:</strong> These links provide direct access to the documents. Please ensure that you download and store these documents securely in accordance with IKEA's data protection policies.</div><p>The documents are available for immediate download. If you experience any issues accessing the documents or require additional assistance, please contact the IKEA Legal Department.</p><div class='signature'><p>Best regards,<br><strong>IKEA DocuScan System</strong><br>Document Management & Archive</p></div></div><div class='footer'><p>This is an automated message from the IKEA DocuScan System. Please do not reply directly to this email.<br>Links remain valid and accessible through the system.</p></div></div></body></html>",
      "LinkItemTemplate": "<div class='document-item'><div class='barcode'>Barcode: {Barcode}</div><div class='doc-details'>{DocumentName} | {DocumentType}</div><a href='{DownloadUrl}' class='download-link' target='_blank'>Download Document</a></div>"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\IkeaDocuScan\\log-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "shared": true,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "IkeaDocuScan"
    }
  },
  "AllowedHosts": "*"
}
